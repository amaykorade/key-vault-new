# Server
PORT=4000
NODE_ENV=development

# Database
# Local: postgresql://keyvault:keyvault@localhost:5432/keyvault
# Docker: postgresql://keyvault:keyvault@db:5432/keyvault
# Render: Will be provided automatically
DATABASE_URL=postgresql://keyvault:keyvault@localhost:5432/keyvault

# JWT
JWT_ACCESS_SECRET=change_me_access_secret
JWT_REFRESH_SECRET=change_me_refresh_secret
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# Encryption
ENCRYPTION_KEY=change_me_encryption_key_32bytes_min

# CORS
CORS_ORIGIN=http://localhost:5173

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:4000/api/auth/google/callback

# Email Configuration (for invitations)
SMTP_HOST=smtpout.secureserver.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@yourdomain.com
SMTP_PASS=your_email_password
FROM_EMAIL=your_email@yourdomain.com
FROM_NAME=Key Vault
FRONTEND_URL=http://localhost:5173

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret


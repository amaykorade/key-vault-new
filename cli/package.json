{
  "name": "@keyvault/cli",
  "version": "0.1.2",
  "description": "APIVault CLI for managing secrets from the terminal",
  "bin": {
    "keyvault": "dist/index.cjs"
  },
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts --format cjs --sourcemap --dts --clean --out-dir dist --target node18",
    "dev": "tsup src/index.ts --format cjs --sourcemap --watch --out-dir dist --target node18",
    "prepare": "npm run build"
  },
  "keywords": [
    "keyvault",
    "cli",
    "secrets",
    "devops"
  ],
  "author": "APIVault",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "open": "^9.1.0",
    "ora": "^5.4.1",
    "prompts": "^2.4.2",
    "yaml": "^2.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/prompts": "^2.4.9",
    "tsup": "^7.2.0",
    "typescript": "^5.6.3"
  }
}
